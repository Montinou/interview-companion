{
  "manifest_version": 3,
  "name": "Interview Companion",
  "version": "0.1.0",
  "description": "AI-powered real-time interview analysis copilot",
  "permissions": [
    "tabCapture",
    "activeTab",
    "offscreen",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "host_permissions": [
    "https://llcnkvnrsaszxwpiufbi.supabase.co/*",
    "wss://api.deepgram.com/*",
    "https://interview-companion.triqual.dev/*"
  ]
}
